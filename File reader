          for(int j=1+i; j < arr.length;j++){
            double distance = calculateDistanceInKm(matrixD[i][0], matrixD[i][1], matrixD[j][0], matrixD[j][1]);
            matrixD[i][j] = d;
            matrixD[j][i] = d;
          }
